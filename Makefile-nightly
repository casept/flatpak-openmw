all:
	rm -rf openmw
	flatpak-builder --repo=repo --ccache openmw nightly-org.openmw.openmw.json 
	flatpak build-bundle repo openmw-nightly.flatpak org.openmw.openmw nightly
clean:
	rm -rf build repo openmw *.flatpak .flatpak-builder
install:
	flatpak install --user --bundle openmw-nightly.flatpak
uninstall:
	flatpak uninstall --user org.openmw.openmw
